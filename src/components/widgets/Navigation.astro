---
import {Sun, Moon} from 'lucide'
import Icons from "./Icons.astro"

const NAV_LINKS = [
   { label: 'about', link: '/about' },
   { label: 'crafts', link: '/crafts' }
]
---

<header class="sticky top-1 mt-6">
   <nav class="flex justify-center items-center">
      <ul
         class="nav-ul flex justify-center items-center bg-primary px-6 border rounded-full transition border-border/50"
      >
         <li class="mx-1"><a href="/" class="flex px-3 py-2">/</a></li>
         {
            NAV_LINKS.map((navLink) => {
               return (
                  <li class="group relative mx-1">
                     <a href={navLink.link} class="flex px-3 py-2">
                        {navLink.label}
                     </a>
                     <span class="nav-item absolute -bottom-[1px] left-1/2 -translate-x-1/2 w-0 h-0 rounded-lg group-hover:w-1/2 group-hover:h-[2px] bg-background transition-all" />
                  </li>
               )
            })
         }
         <!-- TODO: toggle i18n -->
         <li class="mx-2">
            <button id="light-switch" class="flex relative w-5 px-3 h-10">
               <Icons icon={Sun} class:list={['text-foreground absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-4 h-4 transition-all', 'scale-100 rotate-90 dark:scale-0 dark:rotate-0']} />
               <Icons icon={Moon} class:list={['text-foreground absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-4 h-4 transition-all', '-rotate-90 scale-0 dark:scale-100 dark:rotate-0' ]} />
               <span class="sr-only"
                  >Enable{' '}
                  <span class="dark:hidden">light</span>
                  <span class="hidden dark:inline">dark</span>
                  {' '}mode
               </span>
            </button>
         </li>
         <!-- <li><button class="mx-2 px-4 py-2">kr</button></li> -->
      </ul>
   </nav>
</header>

<script>
   import '../../scripts/toggle-theme'
</script>
